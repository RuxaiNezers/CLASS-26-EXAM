<%= form_with model: @todo, local: true do |form| %>

<div class="field">
  <%= form.label :description, "Description" %>
  <%= form.text_field :description %>
</div>

<div class="field">
  <%= label :completed, "Completed", value: true %>
  <%= form.radio_button :completed, true, :value => true  %>
</div>

<div class="field">
  <%= label :completed, "No Completed", value: false %>
  <%= form.radio_button :completed, false, :checked => true, :value => false  %>
</div>

<div class="field">
  <%= form.submit "Save", :class => 'btn btn-primary' %>
</div>

<% end %>

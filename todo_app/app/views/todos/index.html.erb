<h1>TO-DO LIST</h1>

<%= link_to 'New To-do', todos_new_path , :class => 'btn btn-primary' %>

<table class="table table-well">
  <thead>
    <tr>
      <th>Description</th>
      <th>completed</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.description %></td>
        <td><%= todo.completed %></td>
        <td><%= link_to 'Show To-do', todo, :class => 'btn btn-primary' %></td>      
      </tr>
    <% end %>
  </tbody>
</table>
